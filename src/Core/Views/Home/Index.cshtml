<script type="text/x-handlebars" data-template-name="salesAgents/detail">
	<div class="row">
		<div class="medium-5 column" style="text-align: center; border-right: 3px solid black">
			<img {{bindAttr src="imageUrl"}} alt="Agent Photo" class="agent-photo"/>
		</div>
		<div class="medium-7 column">
			<div class="row panel" style="min-height:200px">
				<div class="medium-8 column">
					<h2>{{name}}</h2>
					<p>{{location.name}}</p>
					<p>
						Net Imports: <strong>{{dollars netImports}}</strong> <br />
						Net Exports: <strong>{{dollars netExports}}</strong>
					</p>
				</div>
				<div class="medium-4 column">
					<button {{action deleteAgent}}> Delete </button>
				</div>
			</div>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="medium-6 column">
			<h3>Imports</h3>
				<table>
					<thead><tr>
						<th>Name</th>
						<th>Type</th>
						<th>From</th>
						<th>Quantity</th>
						<th>Price</th>
					</tr></thead>
					<tbody>
				{{#each import in imports}}
					<tr>
						<td>{{import.name}}</td>
						<td>{{import.type}}</td>
						<td>{{import.from}}</td>
						<td>{{import.quantity}}</td>
						<td>{{dollars import.price}}</td>
					</tr>
				{{/each}}
					</tbody>
				</table>
		</div>
		<div class="medium-6 column">
			<h3>Exports</h3>
			<table>
				<thead><tr>
					<th>Name</th>
					<th>Measure</th>
					<th>To</th>
					<th>Quantity</th>
					<th>Price</th>
				</tr></thead>
				<tbody>
			{{#each export in exports}}
				<tr>
					<td>{{export.name}}</td>
					<td>{{export.measure}}</td>
					<td>{{export.to}}</td>
					<td>{{export.quantity}}</td>
					<td>{{dollars export.price}}</td>
				</tr>
			{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</script>

<script type="text/x-handlebars" data-template-name="salesAgents/add">
	<div class="row" style="padding-bottom:2em;">
		<h3 class="column medium-12">Add New Agent</h3>
	</div>
	<div class ="row">
		<div class ="column medium-5">
			<div class="row">
				<div class="column medium-2"> {{label "Name"}} </div>		
				<div class="column medium-9 medium-pull-1"> {{input valueBinding="model.name" placeholder="Name"}} </div>
			</div>
			<div class="row">
				<div class="column medium-2"> {{label "Image URL"}} </div>		
				<div class="column medium-9 medium-pull-1"> {{input valueBinding="model.imageUrl" placeholder="Image URL"}} </div>
			</div>
			<div class="row">
				<div class="column medium-12"> <button {{action "saveAgent" target="controller"}}> Add </button> </div>
			</div>
		</div>
		<div class="column medium-6 medium-pull-1 panel">
			{{#if model.name}}
				<h3>{{model.name}}</h3>	
			{{else}}
				<h3>Agent Name</h3>
			{{/if}}
			<img {{bindAttr src="model.imageUrl"}} alt="Agent Photo" class="agent-photo"/>
		</div>
	</div>
</script>

